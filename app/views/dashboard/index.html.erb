<h1 class='text-center'>Welcome <%= current_user.username %>!</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Address</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <div id="user-<%= current_user.id %>">
        <td><%= current_user.first_name %></td>
        <td><%= current_user.last_name %></td>
        <td><%= current_user.address %></td>
        <td><%= current_user.email %></td>
        <td><%= link_to "Edit my account info", edit_user_path(current_user) %></td>
      </div>
    </tr>
  </tbody>
</table>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Orders</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <div id="order-<%= order.id %>">
      <td><%= link_to "Order: #{order.id}", order_path(order.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>
