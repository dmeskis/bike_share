<h1 class='text-center'>Station Index</h1>

<% if current_admin? %>
  <%= link_to "Add New Station", new_admin_station_path, class: 'btn btn-secondary text-center' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Dock Count</th>
      <th scope="col">City</th>
      <th scope="col">Installation Date</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody class='stations'>
    <% @stations.each do |station| %>
    <tr>
      <div id="station-<%= station.id %>">
      <th scope="row"><%= station.id %></th>
      <td><%= station.name %></td>
      <td><%= station.dock_count %></td>
      <td><%= station.city %></td>
      <td><%= station.installation_date %></td>
      <td>
        <%= link_to "View this Station", station_path(station), class: "btn btn-info" %>
        <% if current_admin? %>
          <%= link_to "Edit", edit_admin_station_path(station), class: 'btn btn-warning' %>
          <%= link_to "Delete", admin_station_path(station), method: :delete, class: 'btn btn-danger',
            data: {confirm: "Are you sure you want to delete #{station.name}?"} %>
        <% end %>
      </td>
      <div>
    </tr>
    <% end %>
  </tbody>
</table>
